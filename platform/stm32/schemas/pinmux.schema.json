{
  "$schema": "http://json-schema.org/schema#",
  "type" : "array",
  "items": {
    "type": "object",

    "properties": {
      "ids": {
        "type": "array",
        "items": { "type": "string", "pattern": "^P\\w\\d{1,2}$" }
      },

      "mode":     { "enum": [ "IN", "OUT", "AF", "AN" ] },
      "pull":     { "enum": [ "no", "up", "down" ] },
      "otype":    { "enum": [ "PP", "OD" ] },
      "speed":    { "enum": [ "2MHz", "25MHz", "50MHz", "100MHz" ] },
      "function": { "type": "string" }
    },

    "required": [ "ids" ]
  }
}
